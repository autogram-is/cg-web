{% extends "base.twig" %}
{% set pagetitle = title ? title : post.title %}

{% block floatingsidebar %}
{% if post.hero.type == 'project' and post.hero.project %}
	<div class="hero-caption">
		<div class="body">
			<h3 class="type-eyebrow hed"><a href="{{ post.hero.project.link }}">{{ post.hero.project.title }}</a></h3>
		</div>
	</div>
{% endif %}
{% endblock %}

{% block hero %}
	<h1 class="type-pagehed hed-accent">{{ pagetitle | stylize }}</h1>
{% endblock %}

{% block content %}
	<div class="sidebar">
		<div class="flow central-inner prose">
			{{post.content}}
		</div>
	</div>
{% endblock %}