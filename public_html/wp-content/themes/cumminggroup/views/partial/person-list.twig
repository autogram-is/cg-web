{% if limit %}{% set items = items | slice(0,limit) %}{% endif %}

{% if heading %}
<div class="region">
  <h2 class="type-hed hed-accent" id="hed">{{ heading }}</h2>
</div>
{% endif %}

<div class="region">
  <div class="person-grid flow {{ utilities }}">
    <ul class="people-inner" role="list">
      {% for person in items %}
        {% include ['partial/person.twig'] with { person: person } %}
      {% endfor %}
    </ul>
  </div>
</div>