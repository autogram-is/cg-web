{# see `archive.twig` for an alternative strategy of extending templates #}
{% extends "base.twig" %}

{% block content %}
  {# see `base.twig:27` for where this block's content will be inserted #}
  <div class="region region-primary">
    {% for post in posts %}
      {% set type = post.post_type == "post" ? post.news_category|lower : post.post_type %}
      {% include ['listing-'~type~'.twig', 'listing.twig'] with { type : type } %}
      <hr>
    {% endfor %}
    <div class="region">
      {% include 'partial/pagination.twig' with { pagination: posts.pagination({show_all: false, mid_size: 3, end_size: 2}) } %}
    </div>
  </div>
{% endblock %}
