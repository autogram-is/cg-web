{% extends "single.twig" %}
{% set pagetitle = title ? title : post.title %}


{% block floatingsidebar %}
{% if post.hero.type == 'project' and post.hero.project %}
	<div class="hero-caption">
		<div class="body">
			<h3 class="type-eyebrow hed"><a href="{{ post.hero.project.link }}">{{ post.hero.project.title }}</a></h3>
		</div>
	</div>
{% endif %}
{% endblock %}


{% block hero %}
  <h1 class="type-pagehed hed-accent">{{ pagetitle }}</h1>
{% endblock %}


{% block sidebar %}
  <div class="hero-sidebar">
    <div class="flow">
      {% include "fields/project-facts.twig" %}
    </div>
  </div>
{% endblock %}


{% block posthero %}
{% set gallery = post.meta('gallery') %}
{% if gallery %}{% include "fields/gallery.twig" with { images: gallery } %}{% endif %}
{% endblock %}
