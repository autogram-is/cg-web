{% extends "single.twig" %}
{% set pagetitle = title ? title : post.title %}


{% block hero %}
<div class="hgroup hed-accent">
  <h1 class="hed type-pagehed">{{ pagetitle }}{% if post.location %}, {{ post.location }}{% endif %}</h1>
  {% if post.role %}
  <span class="subhed">{{ post.role }}</span>
  {% endif %}
</div>
{% if bio_is_hidden %}{% include 'partial/hidden-bio-warning.twig' %}{% endif %}
{% endblock %}


{% block content %}
  <div class="region region-primary">
    <div class="sidebar region">
      {% if post.thumbnail %}
      <div>
      <img src="{{post.thumbnail.src }}"
        height="{{post.thumbnail.height}}"
        width="{{post.thumbnail.width}}"
        alt="{{post.thumbnail.alt}}" />
      {% endif %}
      </div>
      <div>
        {{ post.content }}
      </div>
    </div>
    test
    {% include 'fields/office-locations.twig' with { city: post } %}
  </div>
{% endblock %}


{% block posthero %}
  {% if post.nearby_projects(6) | length %}
  <div class="region wrapper">
  {% include "partial/project-gallery.twig" with { heading: "Representative Experience", items: post.nearby_projects(6), sectors: true, services: true } %}
  </div>
  {% endif %}

  {% if post.people | length %}
  <div class="region">
  {% include "partial/person-list.twig" with { heading: pagetitle ~ " Team", items: post.people } %}
  </div>
  {% endif %}
{% endblock %}

