{% extends "single.twig" %}
{% set pagetitle = title ? title : post.title %}
{% set podcast = post.podcast_name %}
{% set season = post.podcast_season %}
{% set episode = post.podcast_episode %}
{% set youtube = post.youtube_url %}
{% set mp3 = post.mp3_url %}

{% block hero %}
  <time datetime="{{post.date('Y-m-d')}}">{{post.date}}</time>
  <h1 class="type-pagehed hed-accent">{{ pagetitle }}</h1>
{% endblock %}


{% block content %}
  {% if podcast %}<div class="lede-header">
  <p>{{ podcast }}{% if season %}: Season {{ season }}{% endif %}{% if episode %}, Episode {{ season }}{% endif %}</p>
  </div>{% endif %}
  <div class="sidebar">
    <div class="prose central-inner lede flow">
      {{post.content}}
    </div>
  </div>
{% endblock %}
