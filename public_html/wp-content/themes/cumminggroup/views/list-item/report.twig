<article class="resource-listing {{ type }} region" aria-labelledby="hed-{{ post.id }}">
	{% block content %}
	<div class="sidebar item">
		{% if post.thumbnail %}
		<a href="{{ post.link }}" class="thumb">
			<img
				src="{{post.thumbnail.src|resize(1200, 666) }}"
				srcset="{{ post.thumbnail.src|resize(1200, 666) }} 1200w, {{ post.thumbnail.src|resize(800, 444) }} 800w, {{ post.thumbnail.src|resize(600, 333) }} 600w, {{ post.thumbnail.src|resize(400, 222) }} 400w"
				{% if type == "hero" %}
				sizes="(min-width: 1240px) 401px, calc(96.74vw - 38px)"
				loading="eager"
				{% else %}
				sizes="auto"
				loading="lazy"
				{% endif %}
				height="666"
				width="1200"
				alt="{{post.thumbnail.alt}}" />
		</a>
		{% elseif post.placeholder %}
		<a href="{{ post.link }}" class="placeholder topo-full {{ post.placeholder.bg }}">
			<span>{{ post.placeholder.text }}</span>
		</a>
		{% endif %}
		<div class="body flow">
	    <div class="type-detail">{% include 'fields/event-dateline.twig' %}</div>
			<h2 class="type-hed {% if type == "hero" %}hed-accent{% endif %}" id="hed-{{ post.id }}">
				<a href="{{ post.link }}">{{ post.title }}</a>
			</h2>
			{% if type == "hero" %}
			<p>{{ post.excerpt.read_more(false) }}</p>
			{% if post.report_pdf %}
			<p>
			<a href="{{ get_attachment(post.report_pdf) }}" class="button secondary factsheet-cta market-report">
				<span>Download Report</span>
				<svg width="24" height="24" viewBox="0 0 24 26" fill="none" xmlns="http://www.w3.org/2000/svg">
					<path d="M5.625 15a.75.75 0 0 0-1.5 0h1.5Zm-.75 1h-.75.75Zm14.4-1a.75.75 0 0 0-1.5 0h1.5Zm-8.166.539a.75.75 0 0 0 1.182.922l-1.182-.922Zm5.082-4.078a.75.75 0 0 0-1.182-.922l1.182.922Zm-5.082 5a.75.75 0 0 0 1.182-.922l-1.182.922ZM8.39 10.54a.75.75 0 0 0-1.182.922l1.182-.922ZM10.95 16a.75.75 0 0 0 1.5 0h-1.5Zm1.5-11a.75.75 0 0 0-1.5 0h1.5ZM4.125 15v1h1.5v-1h-1.5Zm0 1c0 2.053 1.628 3.75 3.675 3.75v-1.5c-1.183 0-2.175-.99-2.175-2.25h-1.5ZM7.8 19.75h7.8v-1.5H7.8v1.5Zm7.8 0c2.047 0 3.675-1.697 3.675-3.75h-1.5c0 1.26-.992 2.25-2.175 2.25v1.5ZM19.275 16v-1h-1.5v1h1.5Zm-6.984.461 3.9-5-1.182-.922-3.9 5 1.182.922Zm0-.922-3.9-5-1.182.922 3.9 5 1.182-.922Zm.159.461V5h-1.5v11h1.5Z" fill="#fff"></path>
				</svg>
			</a>
			</p>
			{% endif %}
			{% endif %}
			{% if post.tags %}
			<ul class="cluster listing-meta type-detail" role="list">
				{% for tag in post.tags %}
				<li><a href="{{ tag.link }}">{{ tag.name }}</a></li>
				{% endfor %}
				{% endif %}
			</ul>
		</div>
	</div>
	{% endblock %}
</article>
