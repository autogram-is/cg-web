{% extends "single/service.twig" %}
{% set pagetitle = (title ? title : post.title) | stylize %}

{% block hero %}
  <h1 class="type-pagehed hed-accent">{{ pagetitle }} Portfolio</h1>
{% endblock %}

{% block posthero %}
  {% if projects %}
  <div class="region region-primary wrapper">
  {% include "partial/project-grid.twig" with { items: projects, sectors: true, services: true } %}
  {% if projects.pagination %}
    <div class="region">
    {% include 'partial/pagination.twig' with { posts: projects } %}
    </div>
  {% endif %}
  </div>
  {% endif %}
{% endblock %}
