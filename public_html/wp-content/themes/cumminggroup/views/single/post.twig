{% extends "single/default.twig" %}
{% set pagetitle = title ? title : post.title %}


{% block hero %}
  <time datetime="{{post.date('Y-m-d')}}">{{post.date}}</time>
  <h1 class="type-pagehed hed-accent">{{ pagetitle }}</h1>
{% endblock %}

{% block content %}
  {% include 'fields/news-bylines.twig' %}
  <div class="prose central-inner lede flow">
    {{ post.content }}
  </div>
  {% include 'partial/share-this.twig' %}
{% endblock %}

{% block posthero %}
{% if post.people %}
  {% include 'partial/person-footer.twig' with { heading: "See us there", people: post.people } %}
{% endif %}
{% endblock %}
