{% extends "single/default.twig" %}

{% block hero %}
	{% if post.start_date %}
		<time datetime="{{post.start_date | date('Y-m-d')}}">{% if post.end_date %}{{post.start_date | date('F j') }}{% else %}{{post.start_date | date }}{% endif %}</time>
		{% if post.end_date %} â€“ <time datetime="{{ post.end_date | date('Y-m-d') }}">{{post.end_date | date }}</time>{% endif %}
	{% else %}
  	<time datetime="{{post.date('Y-m-d')}}">{{post.date}}</time>
	{% endif %}
  <h1 class="type-pagehed hed-accent">{{ post.title }}</h1>
{% endblock %}

{% block sidebar %}
	<div class="location flow">
		<h3 class="hed type-detail">
			{% if post.venue_url %}<a href="{{post.venue_url}}">{{post.venue_name}}</a>{% else %}{{post.venue_name}}{% endif %}
		</h3>
		{% if post.venue_address %}
		<p class="icon-map">
			<a href="https://www.google.com/maps/place/{{post.venue_address}}+{{post.venue_city}}+{{post.venue_state}}+{{post.venue_postcode}}">{{post.venue_address}}<br>{{post.venue_city}}, {{post.venue_state}} {{post.venue_postcode}} {{post.venue_country}}</a>
		</p>
		{% endif %}
	</div>
{% endblock %}

{% block posthero %}
{% if post.people %}
{% include 'partial/person-list.twig' with { heading: "See us there", items: post.people } %}
{% endif %}
{% endblock %}
