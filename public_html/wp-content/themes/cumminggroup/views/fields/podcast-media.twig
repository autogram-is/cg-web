<figure class="media">
  <div class="switcher">
    <div class="thumb">
      <div class="">
      {% if youtube %}
        <a href="" data-media="{{ youtube | youtube_url('embed') }}">
        {% if poster %}
          <img decoding="async" src="{{ poster.src }}">
        {% else %}
          <img decoding="async" src="{{ youtube | youtube_url('poster') }}">
        {% endif %}
        </a>
      {% elseif mp3 %}
      {% endif %}
      </div>
    </div>
  </div>
</figure>
