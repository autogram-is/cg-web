  Title: Regions
  Description: Offices and metadata for one or more regions
  Category: cg-index
  Icon: admin-site
  Mode: edit
  SupportsMode: true
  Align: false
  PostTypes: 
  EnqueueStyle: 
  SupportsAlign: none left right
  SupportsMultiple: true
