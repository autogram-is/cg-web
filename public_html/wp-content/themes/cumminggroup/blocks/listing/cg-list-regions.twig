{#
  Title: Regions
  Description: Offices and metadata for one or more regions
  Category: cg-index
  Icon: admin-site
  Mode: edit
  SupportsMode: true
  Align: false
  PostTypes: 
  EnqueueStyle: 
  SupportsAlign: none left right
  SupportsMultiple: true
  SupportsInnerBlocks: false
  SupportsAlignContent: false
  SupportsAlignText: false
#}
<div class="region region-primary">
  <div class="switcher">
    {% for region in regions %}
    <div class="flow">
      <div class="location switcher flow">
        <div>
        {% if region.heading %}<h2 class="type-eyebrow hed-accent">{{ region.heading }}</h2>{% endif %}
        <div class="location-columns">
          {% for location, titles in region.posts|group_locations %}
          <ul class="flow markers" role="list">
            {% for office in titles|sort%}
            <li class="hed type-hed"><a href="{{ office.link }}">{{ office.title }}, {{ location }}</a></li>
            {% endfor %}
          </ul>
          {% endfor %}
        </div>
      </div>
      </div>
    </div>
    {%- endfor %}
  </div>
</div>
