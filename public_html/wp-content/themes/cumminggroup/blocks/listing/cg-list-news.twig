{#
  Title: News
  Description: Index list of News + Insight posts
  Category: cg-index
  Icon: admin-page
  Mode: edit
  SupportsMode: true
  Align: false
  PostTypes: 
  EnqueueStyle: 
  SupportsAlign: none
  SupportsMultiple: true
  SupportsReusable: true
  SupportsInnerBlocks: false
  SupportsAlignContent: false
  SupportsAlignText: false
#}
<div class="region">
  <div class="region resource-listings {{ classes }} listings-{{ fields.layout }}">
  {% for post in posts %}
  {% include ['listing-'~post.post_type~'.twig', 'listing.twig'] with { 'type': style } %}
  {% if ( fields.layout == "secondary" and loop.index == 2 ) or ( fields.layout == "hero" and loop.index == 3 ) %}
    <hr>
  {% endif %}
  {% endfor %}
  {% if fields.pagination %}
  <div class="region">
  {% include 'partial/pagination.twig' with { pagination: posts.pagination({show_all: false, mid_size: 3, end_size: 2}) } %}
  </div>
  {% endif %}
  </div>
</div>