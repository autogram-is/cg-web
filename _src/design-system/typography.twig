    <div class="region flow">
      <h3 id="sizes">Sizes</h3>
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Scale</th>
            <th>Utility Class</th>
            <th>CSS Custom Property</th>
          </tr>
        </thead>
        <tbody>
          {% for size in design.tokens.textSizes.items %}
            <tr>
              <td>{{ size.name }}</td>
              <td>{{ size.min }}px â€“ {{ size.max }}px</td>
              <td>
                <code>.text-{{ size.name | slug }}</code>
              </td>
              <td><code>var(--size-{{ size.name | slug }})</code></td>
            </tr>
          {% endfor %}
        </tbody>
      </table>

      <h5 class="design-system__render-hed">Rendered</h5>
      <div class="design-system__example flow flow-space-3xs">
        {% for size in design.tokens.textSizes.items %}
          <p style="font-size: var(--size-{{ size.name | slug }})">{{ size.name }}</p>
        {% endfor %}
      </div>
    </div>

    <div class="region flow">
      <div>
        <h3 id="leading">Leading</h3>
        <p><code>line-height</code></p>
      </div>

      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Scale</th>
            <th>Utility Class</th>
            <th>CSS Custom Property</th>
          </tr>
        </thead>
        <tbody>
          {% for size in design.tokens.textLeading.items %}
            <tr>
              <td>{{ size.name }}</td>
              <td>{{ size.value }}</td>
              <td>
                <code>.leading-{{ size.name | slug }}</code>
              </td>
              <td><code>var(--leading-{{ size.name | slug }})</code></td>
            </tr>
          {% endfor %}
        </tbody>
      </table>

      <h5 class="design-system__render-hed">Rendered</h5>
      <div class="design-system__example flow flow-space-3xs">
      {% for size in design.tokens.textLeading.items %}
